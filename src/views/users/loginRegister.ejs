<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs', {title: "Ingresar"}) %>

    <body>

        <%- include('../partials/header.ejs') %>


            <div class="contenido container-fluid form-login-register">

                <div class="row">

                <!--INICIAR SESIÓN-->
                <form class="formulario-iniciar row col-12 col-md-6" method="POST" action="/usuario/login">
                    
                    <h1 class="col-12"> Ingresar</h1>

                    <!-- email -->
                    <div class="input-contenedor form-group col-12">

                        <p><i class="fas fa-envelope icon"></i> Correo electrónico</p>

                        <input class="form-control" type="text" placeholder="Correo electrónico" name="email"
                            value="">
                            
                            <br>

                        <span class="text-danger errorLoginEmail">
                           
                        </span>

                    </div>

                    <!-- Password -->
                    <div class="input-contenedor form-group col-12">

                        <p><i class="fas fa-key icon"></i> Contraseña</p>

                        <input class="form-control " type="password" placeholder="Contraseña" name="password">
                        
                        <br>

                        <span class="text-danger errorLoginPass">
                            
                        </span>

                    </div>

                    <!-- Rememberme -->
                    <div class="custom-control custom-switch input-contenedor col-12">
                        <input type="checkbox" class="custom-control-input" id="rememberme" name="rememberme">
                        <label class="custom-control-label" for="rememberme">Recordar</label>
                      </div>


                    <div class="col-12">
                        <button type="submit" class="btn btn-success"> Ingresar</button>
                    </div>

                </form>



                <!--REGISTRO-->

                <form class="formulario-registro row col-12 col-md-6" method="POST" action="/usuario/registro">
                    
                    <h1 class="col-12"> Registrarse</h1>

                    <!-- nombre -->
                    <div class="input-contenedor form-group col-12">

                        <p><i class="fas fa-user icon"></i> Nombre y apellido</p>

                        <input class="form-control" name="fullName" type="text" placeholder="Nombre y apellido" value="">
                        <br>

                        <span class="text-danger errorRegisterName">
                           
                        </span>

                    </div>

                    <!-- email -->
                    <div class="input-contenedor form-group col-12">

                        <p><i class="fas fa-envelope icon"></i> Correo electrónico</p>

                        <input class="form-control " name="email" type="text" placeholder="Correo electrónico"
                            value="">
                            
                            <br>

                        <span class="text-danger errorRegisterEmail">
                           
                        </span>

                    </div>

                    <!-- password -->
                    <div class="input-contenedor form-group col-12">

                        <p><i class="fas fa-key icon"></i> Contraseña</p>

                        <input class="form-control" name="password" type="password" placeholder="Contraseña">
                        
                        <br>

                        <span class="text-danger errorRegisterPass">
                            
                        </span>

                    </div>

                    <!-- confirmar password -->
                    <div class="input-contenedor form-group col-12">

                        <p><i class="fas fa-key icon"></i> Confirmar contraseña</p>

                        <input class="form-control" name="rePassword" type="password"
                            placeholder="Confirmar contraseña">
                            
                            <br>

                        <span class="text-danger errorRegisterConfirm">
                           
                        </span>

                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-success "> Registrarse</button>
                        <p> Al registrarte, aceptas nuestros <a href="/tyc" style="color: rgb(0, 48, 138);text-decoration: underline;">Términos y condiciones</a>.</p>
                    </div>
                </form>
                </div>
            </div>

            <%- include('../partials/footer.ejs') %>

                <script src="/javascripts/loginRegisterValidator.js"></script>
                <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    </body>


</html>
